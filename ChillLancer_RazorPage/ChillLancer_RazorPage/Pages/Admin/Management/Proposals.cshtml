@page
@model ChillLancer_RazorPage.Pages.Admin.Management.ProposalsModel
@{
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Categories Configuration</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item">System Configuration</li>
                <li class="breadcrumb-item active">Categories</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Datatables</h5>
                        <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable. Check for <a href="https://fiduswriter.github.io/simple-datatables/demos/" target="_blank">more examples</a>.</p>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th data-type="date" data-format="YYYY/DD/MM">CreatedAt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var prop in Model.Proposals)
                                {
                                    <tr>
                                        <td>@prop.Title</td>
                                        <td>@prop.Description</td>
                                        <td>@prop.Status</td>
                                        <td>@prop.CreatedAt</td>
                                        
                                        @* <td> *@
                                        @*     <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#propModal" *@
                                        @*             data-id="@prop.Id" data-nametag="@prop.Title" data-title="@prop.FullName" data-email="@prop.Email" *@
                                        @*             data-password="@prop.Password" data-identity="@prop.IdentityCode" data-phone="@prop.PhoneNumber" *@
                                        @*             data-address="@prop.Address" data-national="@prop.National" data-company="@prop.CompanyName" *@
                                        @*             data-isverified="@prop.IsVerified" data-role="@prop.Role" data-status="@prop.Status"> *@
                                        @*         Edit *@
                                        @*     </button> *@
                                        @*     <form method="post" asp-page-handler="Delete" style="display:inline"> *@
                                        @*         <input type="hidden" name="id" value="@prop.Id" /> *@
                                        @*         <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete?')">Delete</button> *@
                                        @*     </form> *@
                                        @* </td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
